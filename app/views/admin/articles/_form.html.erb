<%= simple_form_for [:admin, @article], html: {class: "form-horizontal"}  do |f| %>
  <div class="form-body">
    <div class="form-group">
      <%= f.label :title, class: "col-md-4 control-label" %>
      <div class="col-md-12">
         <%= f.text_field :title, class: "form-control input-circle",
                          placeholder: "Write title..." %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :slug, class: "col-md-4 control-label" %>
      <div class="col-md-12">
         <%= f.text_field :slug, class: "form-control input-circle",
                          placeholder: "Slug" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "col-md-4 control-label" %>
      <div class="col-md-12">
         <%= f.cktext_area :content, class: "form-control input-circle",
                           placeholder: "content" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit yield(:button_text)  , class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
